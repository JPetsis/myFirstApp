<div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <%= image_tag(@product.image_url, class: "img-fluid img-zoom", data_zoom_image: @product.image_url) %>
      </div>
      <div class="col-md-5 show_product_information">
        <p>
          <%= @product.name %>
        </p>
        <p>
          <strong>$ <%= @product.price %> </strong>
        </p>
        <p>
          <%= @product.description %>
        </p>
        <p>
        <% if user_signed_in? %>
          <%= form_with(url: '/payments/create') do |form| %>
            <%= render partial: "shared/stripe_checkout_button" %>
            <%= hidden_field_tag(:product_id, @product.id) %>
          <% end %>
        <% end %>
        </p>
        <p>Average Rating: <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div> </p>
      </div>  
    </div>
    <div class="row">
      <div class="col-md-3 reviews">
        <%= render "new_comment" %>
        <%= render 'comments' %>
        
        <%= will_paginate @comments %>
        
      </div>
    </div>
</div>


<% if signed_in? && current_user.admin? %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
<% end %>
