<p id="notice"><%= notice %></p>

<div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <%= image_tag(@product.image_url, class: "img-fluid") %>
      </div>
      <div class="col-md-5 show_product_information">
        <p>
          <%= @product.name %>
        </p>
