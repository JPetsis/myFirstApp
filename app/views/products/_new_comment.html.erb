<% if signed_in? %>
  <h4>Add a review:</h4>
      <%= bootstrap_form_for([@product, @product.comments.build]) do |f| %>
      <p>
        <%= f.text_area :body, label: "Comments" %>
      </p>
      <p>
        <div class="rating"></div>
      </p>  
      <p>
        <%= f.submit "Submit" %>
      </p>
  <% end %>
<% end %>
